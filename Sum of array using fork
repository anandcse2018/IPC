#include<iostream>
#include<unistd.h>
using namespace std;
int main()
{
	int a[]={1,2,3,4,5,6,7,8};
	int n=sizeof(a)/sizeof(int);
	int start,end;
	int id=fork();
	if(id==0)
	{
		start=0;
		end=n/2;
	}
	else
	{
		start=n/2;
		end=n;
	}
	int sum=0; 
	for(int i=start; i<end; i++)
		sum+=a[i];
	cout<<"calculated partial sum : "<<sum<<endl;
	return 0;
}
